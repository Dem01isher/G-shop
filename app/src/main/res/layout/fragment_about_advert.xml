<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.leskov.g_shop_test.domain.responses.AdvertResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.your_advert.AboutAdvertFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/green"
                app:titleTextColor="@color/white"
                app:menu="@menu/menu_edit"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="@string/your_advert" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    tools:src="@drawable/ic_no_photo"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="@id/layout"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintEnd_toEndOf="@id/layout"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@{item.title}"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:text="@string/template_title"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintTop_toBottomOf="@id/poster"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintBottom_toTopOf="@id/description"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_template"
                    tools:text="@{item.price}"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner_text"
                    app:layout_constraintTop_toBottomOf="@id/poster"
                    app:layout_constraintStart_toEndOf="@id/title"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintBottom_toTopOf="@id/description"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_description"
                    tools:text="@{item.description}"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintBottom_toBottomOf="@id/layout"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>