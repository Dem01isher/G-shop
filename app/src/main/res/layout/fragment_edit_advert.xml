<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.adverts.your_advert.edit_advert.EditAdvertFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/green"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="@string/edit_advert"
                app:menu="@menu/menu_profile_edit"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/photo_loading"
            layout="@layout/progress"
            android:visibility="gone"
            tools:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/headline_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/headline"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:layout_marginTop="16dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintBottom_toTopOf="@+id/price_layout"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintTop_toTopOf="@id/layout"
                    app:layout_constraintVertical_bias="0.5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/headline"
                        android:layout_width="match_parent"
                        android:maxLength="100"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/price"
                    app:counterEnabled="true"
                    app:counterMaxLength="7"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintTop_toBottomOf="@id/add_photos"
                    app:layout_constraintBottom_toTopOf="@id/add_photos">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="7"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/add_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="@string/add_photos"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintTop_toBottomOf="@id/price_layout"
                    app:layout_constraintBottom_toTopOf="@id/imageLayout"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_photos">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/load_image"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:backgroundTint="@color/green"
                            android:elevation="0dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_add" />
                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/list_item_delete_image" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/description_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:hint="@string/description"
                    app:counterEnabled="true"
                    app:counterMaxLength="1000"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageLayout"
                    app:layout_constraintBottom_toTopOf="@id/edit_advert">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:maxLength="1000"
                        android:scrollbars="vertical"
                        android:imeOptions="actionNext" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_advert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create"
                    android:fontFamily="@font/roboto_light"
                    android:letterSpacing="0"
                    android:textAllCaps="false"
                    android:paddingHorizontal="48dp"
                    android:layout_marginTop="86dp"
                    app:layout_constraintBottom_toBottomOf="@id/layout"
                    app:layout_constraintEnd_toEndOf="@id/layout"
                    app:layout_constraintStart_toStartOf="@id/layout"
                    app:layout_constraintTop_toBottomOf="@id/description_layout"
                    app:layout_constraintVertical_bias="0.25" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>